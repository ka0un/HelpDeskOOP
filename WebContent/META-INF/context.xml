<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!-- Define the DataSource with connection pooling -->
    <Resource
        name="jdbc/helpdeskDB"
        auth="Container"
        type="javax.sql.DataSource"
        username="helpdesk_user"
        password="helpdesk_password"
        driverClassName="com.mysql.cj.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/helpdesk_oop"
        maxTotal="20"
        maxIdle="10"
        maxWaitMillis="-1"/>
    
</Context>
